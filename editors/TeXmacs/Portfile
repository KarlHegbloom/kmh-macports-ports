    port:freetype       \
    port:zlib           \
    port:jpeg           \
    port:libpng         \
    port:imlib2         \
    port:guile18		\
    port:libiconv		\
    port:libtool		\
    port:texlive		\
    port:xorg-libXext

depends_run	bin:gs:ghostscript

